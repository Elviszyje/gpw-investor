# GPW Investor - Przykładowa konfiguracja środowiska
# Skopiuj ten plik do .env i uzupełnij odpowiednimi wartościami

# Database Configuration (for Docker)
DB_HOST=postgres
DB_PORT=5432
DB_NAME=gpw_investor
DB_USER=gpw_user
DB_PASSWORD=ZMIEN_NA_BEZPIECZNE_HASLO

# Flask Configuration
FLASK_ENV=production
FLASK_DEBUG=false
SECRET_KEY=ZMIEN_NA_BEZPIECZNY_KLUCZ_MIN_32_ZNAKI

# PostgreSQL Configuration (for container)
POSTGRES_DB=gpw_investor
POSTGRES_USER=gpw_user
POSTGRES_PASSWORD=ZMIEN_NA_BEZPIECZNE_HASLO

# Optional - Redis Configuration
REDIS_URL=redis://redis:6379/0

# Optional - Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
TELEGRAM_DEFAULT_CHAT_ID=your-telegram-chat-id

# Timezone
TZ=Europe/Warsaw

# Chrome/Selenium Configuration (for scrapers)
CHROME_BIN=/usr/bin/google-chrome
DISPLAY=:99
